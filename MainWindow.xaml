<Window x:Class="PrayerTimes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PrayerTimes.ViewModels"
        Title="Prayer Times" Height="650" Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header text (we’ll swap this with your final header image later) -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="PRAYER TIMES" FontSize="34" FontWeight="SemiBold"/>
                <TextBlock Text="A sadaqa jariyah in memory of Alim Habib Tamano (rahimahullah)"
                           FontSize="16" Opacity="0.85"/>
                <TextBlock Text="{Binding TodayLabel}" FontSize="14" Opacity="0.75" Margin="0,8,0,0"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Content="Settings"
                    Width="110"
                    Height="34"
                    Margin="12,6,0,0"
                    VerticalAlignment="Top"
                    Command="{Binding OpenSettingsCommand}" />
        </Grid>

        <Border Grid.Row="2" Padding="14" CornerRadius="12" Background="#FFF3F6F4" BorderBrush="#22000000" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="{Binding NextPrayer}" FontSize="18" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Countdown}" FontSize="22" FontWeight="Bold" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="4" Padding="14" CornerRadius="12" Background="White" BorderBrush="#22000000" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Fajr" FontSize="16"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Fajr}" FontSize="16" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Sunrise" FontSize="16"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Sunrise}" FontSize="16" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Dhuhr" FontSize="16"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Dhuhr}" FontSize="16" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Asr" FontSize="16"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Asr}" FontSize="16" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Maghrib" FontSize="16"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Maghrib}" FontSize="16" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Isha" FontSize="16"/>
                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Isha}" FontSize="16" FontWeight="SemiBold"/>
            </Grid>
        </Border>
    </Grid>
</Window>
