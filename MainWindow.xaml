<Window x:Class="PrayerTimes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PrayerTimes.ViewModels"
        Title="Prayer Times" Height="650" Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="18"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="18"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER (new; no external header.png) -->
        <Border Grid.Row="0" Style="{StaticResource Card}" Padding="0" ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                </Grid.RowDefinitions>

                <!-- Top green band -->
                <Border Grid.Row="0" Background="{DynamicResource AccentBrush}"/>

                <!-- Parchment body -->
                <Border Grid.Row="1" Background="{DynamicResource ParchmentBrush}">
                    <Grid Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Portrait -->
                        <Border Width="92" Height="92" CornerRadius="46" BorderThickness="3" BorderBrush="{DynamicResource GoldBrush}">
                            <Border Background="{DynamicResource ParchmentSoftBrush}" CornerRadius="44" Margin="3">
                                <Image Source="pack://application:,,,/Assets/Images/HabibTamano.png"
                                       Stretch="UniformToFill"/>
                            </Border>
                        </Border>

                        <!-- Titles -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="PRAYER TIMES"
                                       Style="{StaticResource TitleH1}"
                                       Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text="A sadaqah jariyah in memory of"
                                       FontSize="15"
                                       Opacity="0.85"
                                       Margin="0,2,0,0"/>
                            <TextBlock Text="Alim Habib Tamano (rahimahullah)"
                                       FontFamily="{DynamicResource TitleFont}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       Margin="0,1,0,0"/>
                            <TextBlock Text="{Binding TodayLabel}"
                                       FontSize="13"
                                       Opacity="0.75"
                                       Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- Settings -->
                        <Button Grid.Column="3"
                                Width="124"
                                Height="40"
                                VerticalAlignment="Top"
                                Margin="0,4,0,0"
                                Background="{DynamicResource ParchmentSoftBrush}"
                                BorderBrush="{DynamicResource GoldBrush}"
                                BorderThickness="2"
                                Command="{Binding OpenSettingsCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="12">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="14,8"
                                                          RecognizesAccessKey="True"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="Settings"
                                       FontFamily="{DynamicResource TitleFont}"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       FontSize="14"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Bottom gold line -->
                <Border Grid.Row="2" Background="{DynamicResource GoldBrush}"/>
            </Grid>
        </Border>

        <!-- NEXT PRAYER CARD -->
        <Border Grid.Row="2" Style="{StaticResource CardSoft}">
            <StackPanel>
                <TextBlock Text="{Binding NextPrayer}" FontSize="16" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Countdown}" FontSize="26" FontWeight="Bold" Margin="0,6,0,0"/>
                <TextBlock Text="Tip: You can set reminder minutes in Settings."
                           Margin="0,10,0,0"
                           FontSize="12"
                           Opacity="0.70"/>
            </StackPanel>
        </Border>

        <!-- TIMES -->
        <Border Grid.Row="4" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="TODAY'S TIMES" Style="{StaticResource TitleH2}"/>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Fajr" FontSize="15" Opacity="0.85"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Fajr}" FontSize="16" FontWeight="SemiBold"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Sunrise" FontSize="15" Opacity="0.85"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Sunrise}" FontSize="16" FontWeight="SemiBold"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Dhuhr" FontSize="15" Opacity="0.85"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Dhuhr}" FontSize="16" FontWeight="SemiBold"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Asr" FontSize="15" Opacity="0.85"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Asr}" FontSize="16" FontWeight="SemiBold"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Maghrib" FontSize="15" Opacity="0.85"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Maghrib}" FontSize="16" FontWeight="SemiBold"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Isha" FontSize="15" Opacity="0.85"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Isha}" FontSize="16" FontWeight="SemiBold"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
