<Window x:Class="PrayerTimes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PrayerTimes.ViewModels"
        Title="Prayer Times" Height="650" Width="900"
        Icon="Assets/Icons/logo.ico"
        FontSize="14"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <!-- Local styles for this view only -->
    <Window.Resources>
        <!-- Prayer-time "button card" look -->
        <Style x:Key="PrayerTimeButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ParchmentSoftBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource GoldBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="MinHeight" Value="54"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.18"/>
                            </Border.Effect>
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.88"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER (new; no external header.png) -->
        <Border Grid.Row="0" Style="{StaticResource Card}" Padding="0" ClipToBounds="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                </Grid.RowDefinitions>

                <!-- Top green band -->
                <Border Grid.Row="0" Background="{DynamicResource AccentBrush}"/>

                <!-- Parchment body -->
                <Border Grid.Row="1" Background="{DynamicResource ParchmentBrush}">
                    <Grid Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="28"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Portrait -->
                        <Border Width="92" Height="92" CornerRadius="46" BorderThickness="3" BorderBrush="{DynamicResource GoldBrush}">
                            <Border Background="{DynamicResource ParchmentSoftBrush}" CornerRadius="44" Margin="3">
                                <Image Source="pack://application:,,,/Assets/Images/HabibTamano.png"
                                       Stretch="UniformToFill"/>
                            </Border>
                        </Border>

                        <!-- Titles -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="PRAYER TIMES"
                                       Style="{StaticResource TitleH1}"
                                       Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text="A sadaqah jariyah in memory of"
                                       FontSize="15"
                                       Opacity="0.85"
                                       Margin="0,2,0,0"/>
                            <TextBlock Text="Alim Habib Tamano (rahimahullah)"
                                       FontFamily="{DynamicResource TitleFont}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       Margin="0,1,0,0"/>

                            <!-- Emphasize current location line -->
                            <TextBlock Text="{Binding TodayLabel}"
                                       FontSize="17"
                                       FontWeight="SemiBold"
                                       Opacity="0.90"
                                       Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- Settings -->
                        <StackPanel Grid.Column="3"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                            <Button Grid.Column="3"
                                Width="124"
                                Height="40"
                                VerticalAlignment="Top"
                                Margin="0,4,0,0"
                                Background="{DynamicResource ParchmentSoftBrush}"
                                BorderBrush="{DynamicResource GoldBrush}"
                                BorderThickness="2"
                                Command="{Binding OpenSettingsCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="12">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.18"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="14,8"
                                                          RecognizesAccessKey="True"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <TextBlock Text="Settings"
                                       FontFamily="{DynamicResource TitleFont}"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentBrush}"
                                       FontSize="14"/>
                            </Button>

                            <!-- Next prayer summary (text only, QM-style) -->
                            <TextBlock Margin="0,12,0,0"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       TextAlignment="Right"
                                       HorizontalAlignment="Right"
                                       Foreground="#2B2B2B"
                                       Text="{Binding NextPrayer}"/>

                            <TextBlock Margin="0,2,0,0"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       TextAlignment="Right"
                                       HorizontalAlignment="Right"
                                       Foreground="#111"
                                       Text="{Binding Countdown}"/>

                            <TextBlock Margin="0,4,0,0"
                                       FontSize="12"
                                       Opacity="0.75"
                                       TextAlignment="Right"
                                       HorizontalAlignment="Right"
                                       Text="Tip: You can set reminder minutes in Settings."/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Bottom gold line -->
                <Border Grid.Row="2" Background="{DynamicResource GoldBrush}"/>
            </Grid>
        </Border>

        <!-- NEXT PRAYER CARD -->
        <!-- Next card removed (moved as text under Settings button) -->

        <!-- TIMES + ADHAN PANEL -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.55*"/>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: TIMES (compact) -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                Text="TODAY'S TIMES"
                                FontFamily="{DynamicResource TitleFont}"
                                FontSize="26"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource AccentBrush}"/>

                        <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="10,0,0,0">
                            <Button Content="Generate/Print"
                            Command="{Binding ScrollToMonthlyCommand}"
                            Height="26"
                            MinWidth="120"
                            Padding="14,0"
                            Click="ScrollToMonthlyPrint_Click"
                            ToolTip="Jump to Monthly Prayer Times"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource AccentBrush}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Prayer time cards -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" x:Name="TodayTimesScrollViewer">
                        <StackPanel>
                            <Button Style="{StaticResource PrayerTimeButton}" Focusable="False">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Fajr"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Opacity="0.90"
                                               VerticalAlignment="Center"/>

                                    <Button Grid.Column="2"
                                            Background="#FFFFFF"
                                            BorderBrush="{DynamicResource GoldBrush}"
                                            BorderThickness="1"
                                            Padding="14,6"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Content="{Binding Fajr}"
                                            Focusable="False"
                                            Command="{Binding ToggleWaktAdhanCommand}"
                                            CommandParameter="Fajr"
                                            IsEnabled="True">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding FajrAzanEnabled}" Value="False">
                                                        <Setter Property="Opacity" Value="0.55"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="999">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <TextBlock Grid.Column="3"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Opacity="0.70"
                                            Text="Muted">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding FajrAzanEnabled}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Button>

                            <Button Style="{StaticResource PrayerTimeButton}" Focusable="False">
                                <Grid Opacity="0.70">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Sunrise"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Opacity="0.90"
                                               VerticalAlignment="Center"/>

                                    <Button Grid.Column="2"
                                            Background="#FFFFFF"
                                            BorderBrush="{DynamicResource GoldBrush}"
                                            BorderThickness="1"
                                            Padding="14,6"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Content="{Binding Sunrise}"
                                            Focusable="False"
                                            IsEnabled="False">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="999">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Button>

                            <Button Style="{StaticResource PrayerTimeButton}" Focusable="False">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Dhuhr"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Opacity="0.90"
                                               VerticalAlignment="Center"/>

                                    <Button Grid.Column="2"
                                            Background="#FFFFFF"
                                            BorderBrush="{DynamicResource GoldBrush}"
                                            BorderThickness="1"
                                            Padding="14,6"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Content="{Binding Dhuhr}"
                                            Focusable="False"
                                            Command="{Binding ToggleWaktAdhanCommand}"
                                            CommandParameter="Dhuhr"
                                            IsEnabled="True">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DhuhrAzanEnabled}" Value="False">
                                                        <Setter Property="Opacity" Value="0.55"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="999">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <TextBlock Grid.Column="3"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Opacity="0.70"
                                            Text="Muted">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DhuhrAzanEnabled}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Button>

                            <Button Style="{StaticResource PrayerTimeButton}" Focusable="False">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Asr"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Opacity="0.90"
                                               VerticalAlignment="Center"/>

                                    <Button Grid.Column="2"
                                            Background="#FFFFFF"
                                            BorderBrush="{DynamicResource GoldBrush}"
                                            BorderThickness="1"
                                            Padding="14,6"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Content="{Binding Asr}"
                                            Focusable="False"
                                            Command="{Binding ToggleWaktAdhanCommand}"
                                            CommandParameter="Asr"
                                            IsEnabled="True">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AsrAzanEnabled}" Value="False">
                                                        <Setter Property="Opacity" Value="0.55"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="999">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <TextBlock Grid.Column="3"
                                               Margin="10,0,0,0"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Opacity="0.70"
                                               Text="Muted">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AsrAzanEnabled}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Button>

                            <Button Style="{StaticResource PrayerTimeButton}" Focusable="False">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Maghrib"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Opacity="0.90"
                                               VerticalAlignment="Center"/>

                                    <Button Grid.Column="2"
                                            Background="#FFFFFF"
                                            BorderBrush="{DynamicResource GoldBrush}"
                                            BorderThickness="1"
                                            Padding="14,6"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Content="{Binding Maghrib}"
                                            Focusable="False"
                                            Command="{Binding ToggleWaktAdhanCommand}"
                                            CommandParameter="Maghrib"
                                            IsEnabled="True">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding MaghribAzanEnabled}" Value="False">
                                                        <Setter Property="Opacity" Value="0.55"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="999">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <TextBlock Grid.Column="3"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Opacity="0.70"
                                            Text="Muted">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding MaghribAzanEnabled}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Button>

                            <Button Style="{StaticResource PrayerTimeButton}" Focusable="False">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Isha"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Opacity="0.90"
                                               VerticalAlignment="Center"/>

                                    <Button Grid.Column="2"
                                            Background="#FFFFFF"
                                            BorderBrush="{DynamicResource GoldBrush}"
                                            BorderThickness="1"
                                            Padding="14,6"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Content="{Binding Isha}"
                                            Focusable="False"
                                            Command="{Binding ToggleWaktAdhanCommand}"
                                            CommandParameter="Isha"
                                            IsEnabled="True">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IshaAzanEnabled}" Value="False">
                                                        <Setter Property="Opacity" Value="0.55"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="999">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <TextBlock Grid.Column="3"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Opacity="0.70"
                                            Text="Muted">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IshaAzanEnabled}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Button>
                            <!-- ===================== MONTHLY PRINT (NEW) ===================== -->
                            <Border Margin="0,18,0,0"
                            Padding="12"
                            CornerRadius="12"
                            Background="{DynamicResource ParchmentSoftBrush}"
                            BorderBrush="{DynamicResource GoldBrush}"
                            BorderThickness="1.5" x:Name="MonthlyPrintSection">

                                <StackPanel>
                                    <TextBlock Text="Monthly Prayer Times"
                            FontFamily="{DynamicResource TitleFont}"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource AccentBrush}"
                            Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.35*"/>
                                            <ColumnDefinition Width="0.85*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Month -->
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                            Text="Month"
                            FontSize="12"
                            Opacity="0.75"
                            Margin="0,0,0,6"/>

                                        <ComboBox Grid.Row="1" Grid.Column="0"
                            SelectedValue="{Binding PrintMonth, Mode=TwoWay}"
                            SelectedValuePath="Tag"
                            Height="32"
                            Margin="0,0,10,0">
                                            <ComboBoxItem Content="January" Tag="1"/>
                                            <ComboBoxItem Content="February" Tag="2"/>
                                            <ComboBoxItem Content="March" Tag="3"/>
                                            <ComboBoxItem Content="April" Tag="4"/>
                                            <ComboBoxItem Content="May" Tag="5"/>
                                            <ComboBoxItem Content="June" Tag="6"/>
                                            <ComboBoxItem Content="July" Tag="7"/>
                                            <ComboBoxItem Content="August" Tag="8"/>
                                            <ComboBoxItem Content="September" Tag="9"/>
                                            <ComboBoxItem Content="October" Tag="10"/>
                                            <ComboBoxItem Content="November" Tag="11"/>
                                            <ComboBoxItem Content="December" Tag="12"/>
                                        </ComboBox>

                                        <!-- Year -->
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                            Text="Year"
                            FontSize="12"
                            Opacity="0.75"
                            Margin="0,0,0,6"/>

                                        <TextBox Grid.Row="1" Grid.Column="1"
                            Text="{Binding PrintYear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Height="32"/>

                                        <!-- Page preset -->
                                        <TextBlock Grid.Row="2" Grid.Column="0"
                            Text="Page"
                            FontSize="12"
                            Opacity="0.75"
                            Margin="0,10,0,6"/>

                                        <ComboBox Grid.Row="3" Grid.Column="0"
                            SelectedValue="{Binding PrintPagePreset, Mode=TwoWay}"
                            SelectedValuePath="Tag"
                            Height="32"
                            Margin="0,0,10,0">
                                            <ComboBoxItem Content="Legal US" Tag="LegalUS"/>
                                            <ComboBoxItem Content="A3" Tag="A3"/>
                                        </ComboBox>
                                    </Grid>

                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                        <Button Content="Generate" Height="34" MinWidth="92" Padding="14,0" Margin="0,0,10,0" Click="MonthlyGenerateComingSoon_Click"/>

                                        <Button Content="Print" Height="34" MinWidth="72" Padding="14,0" Click="MonthlyPrintComingSoon_Click"/>
                                    </StackPanel>

                                    <TextBlock Text="Tip: Generate first, then Print."
                            FontSize="11"
                            Opacity="0.65"
                            Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                            <!-- =================== END MONTHLY PRINT (NEW) =================== -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- RIGHT: ADHAN QUICK SETTINGS (QM-style per-wakt) -->
            <Border Grid.Column="2" Style="{StaticResource CardSoft}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="14"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ADHAN" Style="{StaticResource TitleH2}" Margin="0,0,0,0"/>

                    <!-- Master -->
                    <StackPanel Grid.Row="2">
                        <CheckBox Content="Enable Adhan"
                      IsChecked="{Binding AzanEnabled}"
                      FontSize="13"
                      FontWeight="SemiBold"
                      Margin="0,0,0,10"/>


                        <CheckBox Content="Enable Notifications"
                      IsChecked="{Binding NotificationsEnabled}"
                      FontSize="13"
                      FontWeight="SemiBold"
                      Margin="0,0,0,10"/>
                        <TextBlock Text="Default Mu’adhdhin"
                       FontSize="12"
                       Opacity="0.75"/>

                        <Grid Margin="0,6,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Row="0" Grid.Column="0"
                          ItemsSource="{Binding AzanVoiceOptions}"
                          SelectedItem="{Binding DefaultAzanVoice}"
                          Height="34"/>

                            <Button Grid.Row="0" Grid.Column="2"
                        Content="Test"
                        Command="{Binding TestAdhanCommand}"
                        Height="34"
                        MinWidth="70"
                        Padding="14,0"/>

                            <Button Grid.Row="0" Grid.Column="4"
                        Content="Stop"
                        Command="{Binding StopAdhanCommand}"
                        IsEnabled="{Binding IsAdhanPlaying}"
                        Height="34"
                        MinWidth="70"
                        Padding="14,0"/>

                            <TextBlock Grid.Row="1" Grid.Column="0"
                               Grid.ColumnSpan="5"
                               Margin="0,6,0,0"
                               FontSize="12"
                               Opacity="0.75"
                               Text="{Binding PlayingAdhanText}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAdhanPlaying}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                        </Grid>
                    </StackPanel>

                    <!-- Per-wakt -->
                    <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="0,6,0,0">

                            <TextBlock Text="Per prayer (override)"
                           FontSize="12"
                           Opacity="0.70"
                           Margin="0,0,0,10"/>

                            <!-- Fajr -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" Content="Fajr"
                              IsChecked="{Binding FajrAzanEnabled}"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>

                                <ComboBox Grid.Column="1"
                              ItemsSource="{Binding AzanVoiceOptions}"
                              SelectedItem="{Binding FajrAzanVoice}"
                              Height="32"/>
                            </Grid>

                            <!-- Sunrise (OFF by default) -->
                            <Grid Margin="0,0,0,10" Opacity="0.70">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" Content="Sunrise"
                              IsChecked="{Binding SunriseAzanEnabled}"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>

                                <ComboBox Grid.Column="1"
                              ItemsSource="{Binding AzanVoiceOptions}"
                              SelectedItem="{Binding SunriseAzanVoice}"
                              Height="32"/>
                            </Grid>

                            <!-- Dhuhr -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" Content="Dhuhr"
                              IsChecked="{Binding DhuhrAzanEnabled}"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>

                                <ComboBox Grid.Column="1"
                              ItemsSource="{Binding AzanVoiceOptions}"
                              SelectedItem="{Binding DhuhrAzanVoice}"
                              Height="32"/>
                            </Grid>

                            <!-- Asr -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" Content="Asr"
                              IsChecked="{Binding AsrAzanEnabled}"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>

                                <ComboBox Grid.Column="1"
                              ItemsSource="{Binding AzanVoiceOptions}"
                              SelectedItem="{Binding AsrAzanVoice}"
                              Height="32"/>
                            </Grid>

                            <!-- Maghrib -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" Content="Maghrib"
                              IsChecked="{Binding MaghribAzanEnabled}"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>

                                <ComboBox Grid.Column="1"
                              ItemsSource="{Binding AzanVoiceOptions}"
                              SelectedItem="{Binding MaghribAzanVoice}"
                              Height="32"/>
                            </Grid>

                            <!-- Isha -->
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" Content="Isha"
                              IsChecked="{Binding IshaAzanEnabled}"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>

                                <ComboBox Grid.Column="1"
                              ItemsSource="{Binding AzanVoiceOptions}"
                              SelectedItem="{Binding IshaAzanVoice}"
                              Height="32"/>
                            </Grid>

                            <TextBlock Text="Tip: Leave a prayer dropdown blank to use the Default Mu’adhdhin."
                           FontSize="11"
                           Opacity="0.65"
                           Margin="0,14,0,0"/>


                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
