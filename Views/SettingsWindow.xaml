<Window x:Class="PrayerTimes.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="420" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="18"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="SETTINGS" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock Text="Location &amp; Calculation Options" Opacity="0.75" Margin="0,4,0,0"/>
        </StackPanel>

        <Border Grid.Row="2" Padding="14" CornerRadius="12" Background="White" BorderBrush="#22000000" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="City name" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding DraftCityName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Latitude" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding DraftLatitude, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Longitude" VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding DraftLongitude, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Calculation method" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="6" Grid.Column="1"
                          ItemsSource="{Binding Methods}"
                          SelectedItem="{Binding DraftMethod}" />

                <TextBlock Grid.Row="8" Grid.Column="0" Text="Madhhab (Asr)" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="8" Grid.Column="1"
                          ItemsSource="{Binding Madhhabs}"
                          SelectedItem="{Binding DraftMadhhab}" />

                <CheckBox Grid.Row="10" Grid.ColumnSpan="2" Content="Enable notifications" IsChecked="{Binding DraftNotificationsEnabled}" />

                <TextBlock Grid.Row="12" Grid.Column="0" Text="Reminder (minutes)" VerticalAlignment="Center"/>
                <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding DraftReminderMinutes, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </Border>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="90" Margin="0,0,10,0" IsCancel="True" Click="Cancel_Click"/>
            <Button Content="Save" Width="90" IsDefault="True" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
